package com.cyberark.conjur.configclient.service;

import java.util.Map;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.beans.factory.annotation.Value;
import org.springframework.context.annotation.Configuration;

import com.cyberark.conjur.configclient.domain.ConjurAuthParam;

@Component
public class ConjurParamService {
	
	@Autowired
	private ConjurAuthParam conjurParam;
	
	
	public ConjurParamService() {

	}

	@Autowired
	public void getConjurConnection(@Value("${CONJUR.API_KEY}") String authApiKey,
			@Value("${CONJUR.ACCOUNT}") String account, @Value("${CONJUR.APPLIANCE_URL}") String url,
			@Value("${CONJUR.AUTHN_LOGIN}") String authLogin)  
	{
		
		conjurParam.setConjurAccount(account);
		conjurParam.setConjurApiKey(authApiKey);
		conjurParam.setConjurApplianceUrl(url);
		conjurParam.setConjurAuthLogin(authLogin);

		System.out.println("Auth Key >>>>>"+authApiKey);
	}
		

}
